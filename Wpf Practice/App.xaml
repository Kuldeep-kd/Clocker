<Application x:Class="Wpf_Practice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wpf_Practice"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <XmlDataProvider x:Key="Cities" Source="WeatherResources/Cities.xml" XPath="Cities" IsInitialLoadEnabled="True"/>
        <ResourceDictionary x:Key="Dictionaries">
            <ResourceDictionary.MergedDictionaries>
                <!--Order of Dictionaries Matters-->
                <ResourceDictionary Source="Resources/Fonts.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
